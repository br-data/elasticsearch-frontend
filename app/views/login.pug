extends layout

block content

  .login

    form(action='/login' method='post')

      h1=page.title
      p=page.description

      p.fail
        strong #{error.message} &nbsp;

      fieldset.background
        span.icon
          i(class='icon-user')
        span.input
          input(type='text' name='username' autofocus='' placeholder='Username')

      fieldset.background
        span.icon
          i(class='icon-lock-open-alt')
        span.input
          input(type='password' name='password' placeholder='Password')

      fieldset
        input.submit(type='submit' value='Login')
