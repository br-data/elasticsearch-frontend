extends search

block result

  if error
    p.error
      strong=error.message

  else
    .count
      p Found #{result.hits.total} documents (#{result.took} ms)

    each doc in result.hits.hits
      .document
        .download
          a.pdf(href=doc._source.file target='blank') PDF
          a.text(href=doc._source.file target='blank') Text
        .header.doc
          span.title #{doc._source.name}
        each hit in doc.highlight.body
          p.hit!=hit
